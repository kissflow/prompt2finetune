{
  "app": {
    "name": "ShopFlow E-Commerce Platform",
    "version": "2.3.1",
    "environment": "production",
    "region": "us-east-1"
  },
  "features": {
    "newCheckoutFlow": true,
    "darkMode": false,
    "guestCheckout": true,
    "socialLogin": true,
    "productRecommendations": true,
    "aiRecommendations": false,
    "multiCurrency": true,
    "internationalization": true,
    "wishlist": true,
    "productReviews": true,
    "liveChat": false,
    "imageOptimizationV2": false
  },
  "services": {
    "authService": {
      "enabled": true,
      "port": 3001,
      "healthCheck": "/health",
      "timeout": 30000
    },
    "checkoutService": {
      "enabled": true,
      "port": 3002,
      "healthCheck": "/health",
      "timeout": 30000
    },
    "mediaService": {
      "enabled": true,
      "port": 3003,
      "healthCheck": "/health",
      "timeout": 30000
    },
    "userService": {
      "enabled": true,
      "port": 3004,
      "healthCheck": "/health",
      "timeout": 30000
    }
  },
  "limits": {
    "maxCartItems": 50,
    "maxWishlistItems": 100,
    "sessionTimeout": 3600,
    "apiRateLimit": 100,
    "uploadMaxSize": 10485760,
    "searchResultsPerPage": 24,
    "orderHistoryDays": 365
  },
  "payments": {
    "stripe": {
      "enabled": true,
      "publicKey": "pk_live_xxxxxxxxxxxxxxxx",
      "webhookEndpoint": "/webhooks/stripe",
      "retryAttempts": 3,
      "timeout": 15000
    },
    "paypal": {
      "enabled": true,
      "clientId": "xxxxxxxxxxxxxxxx",
      "webhookEndpoint": "/webhooks/paypal",
      "timeout": 15000
    }
  },
  "integrations": {
    "analytics": "google-analytics",
    "errorTracking": "sentry",
    "monitoring": "datadog",
    "cdn": "cloudfront",
    "emailProvider": "sendgrid",
    "smsProvider": "twilio"
  },
  "database": {
    "mongodb": {
      "connectionPoolSize": 50,
      "socketTimeout": 45000,
      "serverSelectionTimeout": 30000,
      "maxIdleTime": 60000
    },
    "redis": {
      "sessionStore": true,
      "caching": true,
      "ttl": 3600,
      "maxRetries": 3
    }
  },
  "alerts": {
    "errorThreshold": 100,
    "latencyThresholdMs": 3000,
    "uptime": {
      "critical": 0.999,
      "warning": 0.995
    },
    "channels": {
      "slack": true,
      "email": true,
      "pagerduty": false
    }
  },
  "security": {
    "rateLimiting": {
      "enabled": true,
      "maxRequests": 100,
      "windowMs": 60000
    },
    "cors": {
      "enabled": true,
      "allowedOrigins": [
        "https://www.shopflow.com",
        "https://mobile.shopflow.com",
        "https://staging.shopflow.com"
      ]
    },
    "helmet": {
      "enabled": true,
      "contentSecurityPolicy": true,
      "hsts": true
    },
    "jwt": {
      "expiresIn": "24h",
      "algorithm": "HS256"
    }
  },
  "logging": {
    "level": "info",
    "format": "json",
    "destination": "cloudwatch",
    "retentionDays": 30
  },
  "maintenance": {
    "enabled": false,
    "message": "ShopFlow is currently undergoing maintenance. We'll be back soon!",
    "allowedIPs": [
      "10.0.0.0/8"
    ]
  }
}
